@page
@model GoogleAuthAzure.Pages.Widgets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Widget</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Widget.ID" />
            <div class="form-group">
                <label asp-for="Widget.Created" class="control-label"></label>
                <input asp-for="Widget.Created" class="form-control" />
                <span asp-validation-for="Widget.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Widget.Name" class="control-label"></label>
                <input asp-for="Widget.Name" class="form-control" />
                <span asp-validation-for="Widget.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Widget.Description" class="control-label"></label>
                <input asp-for="Widget.Description" class="form-control" />
                <span asp-validation-for="Widget.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Widget.Price" class="control-label"></label>
                <input asp-for="Widget.Price" class="form-control" type="number" min="0.01" step="0.01" />
                <span asp-validation-for="Widget.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
